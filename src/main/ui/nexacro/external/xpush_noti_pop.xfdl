<?xml version="1.0" encoding="utf-8"?>
<FDL version="2.1">
  <Form id="commMemo" width="568" height="238" titletext="메모장" onload="commMemo_onload">
    <Layouts>
      <Layout height="238" mobileorientation="landscape" width="568">
        <Static id="Static00" taborder="" left="0" top="0" cssclass="sta_WF_notepad" right="0" bottom="0"/>
        <Button id="btnMove" taborder="4" left="0" top="0" height="50" cssclass="btn_WF_noteHead" right="0"/>
        <Button id="btnClose" taborder="1" top="10" width="30" height="30" cssclass="btn_WF_noteDel" onclick="fn_comBtnOnClick" right="5"/>
        <TextArea id="TextArea00" taborder="2" left="10" top="55" cssclass="txa_WF_notepad" onsetfocus="TextArea00_onsetfocus" bottom="0" right="6" wordWrap="char" enable="false"/>
        <Button id="btnResize" taborder="3" width="15" height="15" cssclass="btn_WF_widgetMove02" right="10" bottom="10"/>
        <Static id="Static01" taborder="5" left="0" top="50" height="1" background="#A598EF" right="0"/>
      </Layout>
    </Layouts>
    <Script type="xscript5.1"><![CDATA[this.commMemo_onload = function(obj:nexacro.Form,e:nexacro.LoadEventInfo)
{
	this.fnSetTitle(this.MSG.sUserId);
	this.fnSetTxt(this.MSG.sMessage);
};

this.fn_comBtnOnClick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	switch (obj.name)
	{
		case "btnClose" :
			this.parent.parent.fnCloseMemo(this.parent);
			break;
	}
};

this.TextArea00_onsetfocus = function(obj:nexacro.TextArea,e:nexacro.SetFocusEventInfo)
{
	this.parent.bringToFront();
};

this.fnSetTitle = function(arg)
{
	const app = nexacro.getApplication();
	let strTitle = (app.langCode == "ko") ? arg + " 님의 메시지" : "Message from " + arg;
	this.btnMove.text = strTitle;
};

this.fnGetTitle = function()
{
	return this.btnMove.text;
};

this.fnSetTxt = function(arg)
{
	this.TextArea00.value = arg;
};

this.fnGetTxt = function()
{
	return this.TextArea00.value;
};]]></Script>
  </Form>
</FDL>
